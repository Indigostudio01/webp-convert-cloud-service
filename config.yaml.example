destination-dir: '../conversions'

access:
    #allowed-hosts:
    #     - bitwise-it.dk
    #allowed-ips:
    #    - 127.0.0.1

    # The secret should match the secret on the server that calls our cloud service
    # NOTE!!!
    # It is not safe to store sensitive information in this file. We will find a better solution.
    # possibly we change to use dotenv for the secret.
    secret: 'my dog is white'

# To learn about webp-convert options, go to https://github.com/rosell-dk/webp-convert
webp-convert:
    quality: 80
    method: 6
    low-memory: true
    metadata: 'none'        # Valid values: all, none, exif, icc, xmp

    converters:
        -
            converter: 'cwebp'
            options:
                use-nice: true

        - imagick

        -
            converter: 'gd'
            options:
                skip-pngs: true

        -
            converter: 'ewww'
            options:
                key: 'key1'

        -
            converter: 'ewww'
            options:
                key: 'key2'
